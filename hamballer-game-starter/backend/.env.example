# HamBaller.xyz Backend Environment Configuration

# === Server Configuration ===
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# === CORS Origins (comma-separated) ===
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# === Supabase Configuration ===
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# === Blockchain Configuration ===
ABSTRACT_RPC_URL=https://api.testnet.abs.xyz
PRIVATE_KEY=your_wallet_private_key_for_contract_interactions

# === Contract Addresses (Auto-populated after deployment) ===
DBP_TOKEN_ADDRESS=0x...
BOOST_NFT_ADDRESS=0x...
HODL_MANAGER_ADDRESS=0x...

# === WebSocket Configuration ===
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# === Game Configuration ===
CP_TO_DBP_RATE=10
BONUS_THROW_MULTIPLIER=2
MIN_RUN_DURATION=30
MAX_RUN_DURATION=300

# === Security ===
JWT_SECRET=your_jwt_secret_for_auth_if_needed
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# === Logging ===
LOG_LEVEL=info
LOG_FILE=logs/hamballer.log

# === Price Simulation (Development Only) ===
ENABLE_PRICE_SIMULATION=true
PRICE_UPDATE_INTERVAL=30000
